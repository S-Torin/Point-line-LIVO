<launch>
    <arg name="rviz" default="true" />

    <param name="config_path" type="string" value="$(find livo)/config/r3live.yaml" />

    <param name="glog_location" type="string" value="$(find livo)/Log/glog" />

    <node pkg="livo" type="run_livo" name="livo" output="screen" />

    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find livo)/rviz_cfg/livo.rviz" />
    </group>

    <node pkg="image_transport" type="republish" name="republish" args="compressed in:=/camera/image_color raw out:=/camera/image_color" output="screen" respawn="true"/>

</launch>